<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <View
        android:id="@+id/view_main_1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/li_main_bt"
        android:layout_below="@+id/view_main_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_60"
        android:orientation="horizontal"
        android:background="@color/white"

        >
        <ImageView
            android:id="@+id/iv_main_memu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dp_jy_60"
            android:layout_weight="1"
            android:src="@mipmap/black_fh"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="套餐"
            android:textSize="@dimen/sp_18"
            android:textColor="#333333"
            />
        <ImageView
            android:id="@+id/iv_repair_xq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:paddingLeft="@dimen/dp_jy_50"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_below="@+id/li_main_bt"
/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_packages"
        android:layout_below="@+id/li_main_bt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/dp_jy_50"

        >

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_45"
        android:text="购买套餐"
        android:gravity="center"
        android:background="@drawable/bg_login1"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginBottom="@dimen/dp_jy_30"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:layout_marginRight="@dimen/dp_jy_12"
        />
</RelativeLayout>
